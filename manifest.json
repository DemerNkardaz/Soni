{
	"manifest_version": 3,
	"name": "__MSG_extName__",
	"short_name": "__MSG_title__",
	"version": "1.1",
	"description": "__MSG_shortDesc__",
	"author": "__MSG_author__",
	"homepage_url": "https://github.com/DemerNkardaz/Soni",
	"permissions": ["activeTab", "tabs", "scripting", "storage"],
	"default_locale": "en",
	"action": {
		"default_popup": "popup.html",
		"default_title": "__MSG_extName__",
		"default_icon": {
			"16": "media/icon16.png",
			"32": "media/icon32.png",
			"48": "media/icon48.png",
			"64": "media/icon64.png",
			"96": "media/icon96.png",
			"128": "media/icon.svg"
		}
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "soni-volume-regulator@nkardaz",
			"data_collection_permissions": {
				"required": ["none"]
			}
		}
	},
	"icons": {
		"16": "media/icon16.png",
		"32": "media/icon32.png",
		"48": "media/icon48.png",
		"64": "media/icon64.png",
		"96": "media/icon96.png",
		"128": "media/icon.svg"
	},
	"background": {
		"service_worker": "background.js",
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}